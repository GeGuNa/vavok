<div class="blog-page">
	<div class="row">
		<div class="col">
			<div class="rounded-circle blog-date">
				{@date-created-day}}<br />{@date-created-month}}
			</div>
		</div>
	</div>
	<div class="blog-content">
		{@content}}
	</div>
	
	<div id="comment_area">

		{@comments}} <!-- #comments -->

		{@add_comment}} <!-- add comment -->

	</div>
		
	<div>
		<p>
			<a href="/blog/" class="btn btn-primary">{@website_language[back]}}</a>
		</p>
	</div>
</div>